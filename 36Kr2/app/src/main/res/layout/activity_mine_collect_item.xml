<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin_ten">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mine_collect_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/mine_collect_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_collect_head"
            android:maxLines="2"
            android:paddingLeft="@dimen/layout_margin_five"
            android:text="context"
            android:textSize="@dimen/layout_margin_ten" />

        <TextView
            android:id="@+id/mine_collect_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/mine_collect_head"
            android:layout_toRightOf="@+id/mine_collect_head"
            android:paddingLeft="@dimen/layout_margin_five"
            android:text="@string/mine_collect_authorName" />

        <TextView
            android:id="@+id/mine_collect_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/mine_collect_head"
            android:layout_toRightOf="@id/mine_collect_author"
            android:paddingLeft="@dimen/layout_margin_five"
            android:text="@string/mine_collect_time" />
    </RelativeLayout>
</LinearLayout>