<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_fifty"
        android:padding="@dimen/layout_margin_ten">

        <ImageView
            android:id="@+id/mine_set_message_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/news_toolbar_icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/set_message"
            android:textSize="@dimen/size_twentyFive" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f0f0f0" />

    <RelativeLayout
        android:id="@+id/mine_set_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_margin_ten">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息推送"
            android:textSize="@dimen/size_fifteen" />

        <Switch
            android:id="@+id/mine_set_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/discovery_icon_list_arrow"
            android:textOff="关闭"
            android:textOn="开启" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_twentyFive"
        android:background="#f0f0f0"
        android:paddingLeft="@dimen/layout_margin_ten"
        android:text="@string/my_set_message" />

    <LinearLayout
        android:id="@+id/mine_set_setSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/mine_set_allDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin_ten">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全天开启"
                android:textSize="@dimen/size_fifteen" />

            <ImageView
                android:id="@+id/mine_set_allDayIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/compose_icon__checked"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0" />

        <RelativeLayout
            android:id="@+id/mine_set_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全天开启"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/mine_set_dayIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/compose_icon__checked"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#f0f0f0"
            android:paddingLeft="10dp"
            android:text="@string/_8_00_22_00" />
    </LinearLayout>
</LinearLayout>