<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/new_navigation_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_five"
                android:layout_marginTop="@dimen/layout_margin_ten"
                android:src="@mipmap/nav_icon_navigation" />

            <TextView
                android:id="@+id/new_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_ten"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="新闻"
                android:textSize="@dimen/size_twentyFive" />

            <ImageView
                android:id="@+id/new_search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_margin_ten"
                android:layout_marginTop="@dimen/layout_margin_ten"
                android:src="@mipmap/nav_icon_search" />
        </LinearLayout>

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/new_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/text_size_twoHundred"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/new_drawer_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_twenty"
            android:src="@mipmap/icon_back" />

        <ListView
            android:id="@+id/new_drawer_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_twenty"
            android:layout_marginTop="@dimen/text_size_twenty"
            android:divider="@null" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>