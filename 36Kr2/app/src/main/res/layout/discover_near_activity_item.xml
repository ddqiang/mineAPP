<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin_ten">

    <ImageView
        android:id="@+id/discover_nearActivity_item_actImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/layout_margin_five"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/discover_nearActivity_item_actName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_five"
        android:maxLines="2"
        android:text="dsadsa" />

    <TextView
        android:id="@+id/discover_nearActivity_item_actDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_five"
        android:maxLines="2"
        android:text="dsadsa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/discover_nearActivity_item_actStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_five"
            android:text="dsadsa" />

        <TextView
            android:id="@+id/discover_nearActivity_item_actCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_five"
            android:text="dsads" />

        <TextView
            android:id="@+id/discover_nearActivity_item_actTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_five"
            android:gravity="right"
            android:text="dsads" />
    </LinearLayout>
</LinearLayout>